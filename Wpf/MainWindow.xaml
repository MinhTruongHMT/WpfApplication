<Window x:Class="WpfAppQLCF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppQLCF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="850" Left="100" Top="100">
    <StackPanel Orientation="Horizontal">
        <StackPanel Width="300" Background="CadetBlue" >
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sign Up" TextAlignment="Center" ></TextBlock>
                <Button Content="Sign Up" Width="100" ></Button>
            </StackPanel>

        </StackPanel>
        <StackPanel Width="500" VerticalAlignment="Center">
            <TextBlock Text="USER" Padding="10 0 0 0" ></TextBlock>
            <TextBox Margin="10 0 10 0" x:Name="txtID" Text="ADMIN"></TextBox>
            <TextBlock Text="PASSWORD" Margin="10 10 0 0" ></TextBlock>
            <PasswordBox Margin="10 0 10 10" x:Name="txtPass" Password="ADMIN"></PasswordBox>
            <Button Content="Login" Margin="10 0 10 0" Click="Button_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
